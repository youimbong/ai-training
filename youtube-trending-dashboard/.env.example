# YouTube Data API Configuration
YOUTUBE_API_KEY=your_youtube_data_api_v3_key_here

# Application Settings
APP_NAME=YouTube Trending Dashboard
APP_VERSION=1.0.0
DEBUG_MODE=False

# API Settings
API_MAX_RESULTS=30
API_DEFAULT_REGION=KR
API_CACHE_TTL=300  # Cache time in seconds

# Rate Limiting
API_RATE_LIMIT_PER_MINUTE=60
API_RETRY_MAX_ATTEMPTS=3
API_RETRY_BACKOFF_FACTOR=2

# UI Settings
UI_THEME=light
UI_VIDEOS_PER_PAGE=30
UI_AUTO_REFRESH_ENABLED=False
UI_AUTO_REFRESH_INTERVAL=300  # Seconds

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Security
ENABLE_CSRF_PROTECTION=True
SESSION_TIMEOUT=3600  # Seconds

# Optional: Analytics
ENABLE_ANALYTICS=False
ANALYTICS_ID=

# Optional: CDN
USE_CDN=False
CDN_URL=
